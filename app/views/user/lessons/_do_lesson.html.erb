<h1><%= t "lesson.not_finish" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:user, @lesson] do |f| %>
      <% @lesson.lesson_words.each.with_index do |lesson_word, index| %>
        <%= f.fields_for :lesson_words, lesson_word do |ff| %>
          <%= render "lesson_word", ff: ff, lesson_word: lesson_word,
            index: index %>
        <% end %>
      <% end %>
      <% unless @disable_check %>
        <%= f.submit t("lesson.done"), class: "btn btn-primary" %>
      <% end %>
    <% end %>
  </div>
</div>

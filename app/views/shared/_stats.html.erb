<% @user ||= current_user %>
<div class="stats">
  <%= link_to user_path(@user, option: "following") do %>
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    <%= t "user.following" %>
  <% end %>
  <%= link_to user_path(@user, option: "followers") do %>
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    <%= t "user.followers" %>
  <% end %>
</div>

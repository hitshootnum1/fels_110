<% provide :title, t("admin.word_index") %>
<div class="row word-filter-form">
  <div class="col-md-8 col-md-offset-3">
    <%= form_for :word, url: admin_words_path, method: :get do |f| %>
      <div class="col-md-4 form-group">
        <%= collection_select :word, :category_id, @categories, :id, :name,
        {prompt: t("category.select")}, class: "form-control" %>
      </div>
      <div class="col-md-6">
        <%= f.text_field :content, placeholder: t("word.placeholder_content"),
          class: "form-control" %>
      </div>
      <div class="col-md-2">
        <%= f.submit t("search"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-3">
    <ol class="words">
      <%= render partial: "/words/word", collection: @words %>
    </ol>
    <div class="row">
      <div class="col-md-8 col-md-offset-3"><%= will_paginate @words %></div>
    </div>
  </div>
</div>

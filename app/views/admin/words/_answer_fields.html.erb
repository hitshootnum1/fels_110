<% if f.object.present? %>
  <table>
    <tr>
      <td><%= f.text_field :content, class: "form-control" %></td>
      <td>
        <%= t "word.correct" %>
        <%= f.check_box :correct, class: "correct" %>
      </td>
      <td><%= link_to_remove_fields t("word.remove"), f %></td>
    </tr>
  </table>
<% end %>

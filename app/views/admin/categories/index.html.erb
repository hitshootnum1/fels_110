<% provide :title, t("admin.category_index") %>
<div class="row category-filter-form">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for :category, url: admin_categories_path, method: :get do |f| %>
      <div class="col-md-6">
        <%= f.text_field :name, placeholder: t("category.placeholder_name"),
          class: "form-control" %>
      </div>
      <div class="col-md-2">
        <%= f.submit t("search"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <ol class="categories">
      <%= render @categories %>
    </ol>
    <div class="row">
      <div class="col-md-8 col-md-offset-3"><%= will_paginate @categories %></div>
    </div>
  </div>
</div>
